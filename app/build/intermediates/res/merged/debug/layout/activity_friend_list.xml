<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7edfc"
    tools:context=".TabFriendActivity" >

    <EditText

        android:padding="10dip"
        android:background="@drawable/edittext"
        android:layout_margin="5dip"
        android:layout_toLeftOf="@+id/img_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter name to filter"
        android:layout_alignParentTop="true"
        android:id="@+id/edtFilter" />

    <ImageView

        android:id="@+id/img_filter"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_alignParentRight="true"
        android:src="@drawable/filter" />
<LinearLayout
    android:layout_below="@+id/edtFilter"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:layout_weight="1"
        android:id="@+id/tabfriendlist"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        >
    </ListView>
    <ListView
        android:layout_weight="1"
         android:divider="@null"
        android:id="@+id/tabfriendlistpics"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        >
    </ListView>
</LinearLayout>
</RelativeLayout>
