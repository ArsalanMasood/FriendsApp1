<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
      android:background="#c7edfc"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/bg_N"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/menu_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/menu_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Profile"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView

                    android:id="@+id/imagev"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pickselect" />

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@color/bg_N"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:background="@drawable/grey2"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Personal"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/TextView04"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="First name"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/firstnameP"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="0.40"
                                android:background="@drawable/edit_field"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:maxEms="20"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textSize="20dp">

                                <requestFocus />
                            </EditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="Last name"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/lastnameP"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="0.40"
                                android:background="@drawable/edit_field"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:maxEms="20"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="Birthday"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/birthdayP"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="0.40"
                                android:background="@drawable/edit_field"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:maxEms="20"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="Gender"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <Spinner
                                android:id="@+id/genderP"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="0.40"
                                android:background="@drawable/edit_field"
                                android:entries="@array/profile_sex_items" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="Slogan"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/sloganP"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="0.40"
                                android:background="@drawable/edit_field"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:maxEms="20"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textSize="20dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="Relationship"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <Spinner
                                android:id="@+id/relationP"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="0.40"
                                android:background="@drawable/edit_field"
                                android:entries="@array/profile_relation_items" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="Country"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/countryP"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="0.40"
                                android:background="@drawable/edit_field"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:maxEms="20"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textSize="20dp" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp" >

                            <Button
                                android:id="@+id/btnSaveProfile"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="Save" />
                       </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@color/bg_N"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:background="@drawable/grey2"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Contact"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/emailP"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="0.40"
                                android:background="@drawable/edit_field"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:maxEms="20"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:text="Phone No"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/phonenoP"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="0.40"
                                android:background="@drawable/edit_field"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:maxEms="20"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textSize="20dp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp" >

                            <TextView
                                android:id="@+id/textAddressView"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/addressP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/textAddressView"
                                android:background="@drawable/edit_field"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textSize="20dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone">

                            <Button
                                android:id="@+id/btnSaveContact"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="Save" />

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@color/bg_N"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="1dp"
                        android:background="@drawable/grey2"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Password"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />




                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp" >

                            <TextView
                                android:id="@+id/textpassword"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="New Password"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#000000"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/edtxtPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/textpassword"
                                android:background="@drawable/edit_field"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:textSize="20dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                           >

                            <Button
                                android:id="@+id/btnPasswordSubmit"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="Submit" />

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>